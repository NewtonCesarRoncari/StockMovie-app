<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/fragment_movie_detail_item_movie_img"
        android:layout_width="115dp"
        android:layout_height="160dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Movie Picture"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/fragment_movie_detail_msg_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Director"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fragment_movie_detail_item_movie_img"
        app:layout_constraintTop_toTopOf="@+id/fragment_movie_detail_item_movie_img" />

    <TextView
        android:id="@+id/fragment_movie_detail_name_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Nome Do Diretor"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_msg_director"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_msg_director" />

    <TextView
        android:id="@+id/fragment_movie_detail_msg_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Cast"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragment_movie_detail_item_movie_img"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_name_director" />

    <TextView
        android:id="@+id/fragment_movie_detail_name_actor_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Actor 1"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_msg_cast"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_msg_cast" />

    <TextView
        android:id="@+id/fragment_movie_detail_name_actor_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Actor 2"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_name_actor_one"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_name_actor_one" />

    <TextView
        android:id="@+id/fragment_movie_detail_msg_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Genre:"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragment_movie_detail_item_movie_img"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_name_actor_two" />

    <TextView
        android:id="@+id/fragment_movie_detail_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Action"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_movie_detail_msg_genre"
        app:layout_constraintStart_toEndOf="@+id/fragment_movie_detail_msg_genre"
        app:layout_constraintTop_toTopOf="@+id/fragment_movie_detail_msg_genre" />

    <RatingBar
        android:id="@+id/fragment_movie_detail_ratingBar"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:rating="4.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_item_movie_img" />

    <TextView
        android:id="@+id/fragment_movie_detail_rating_numeric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4.5"
        android:textColor="@color/colorYellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_movie_detail_ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fragment_movie_detail_ratingBar" />

    <TextView
        android:id="@+id/fragment_movie_detail_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Movie Title"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_item_movie_img" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/fragment_movie_detail_box_office"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_movie_title">

        <TextView
            android:id="@+id/fragment_movie_detail_synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="2dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sed nibh maximus, dictum eros eget, gravida magna. Vivamus sodales eleifend ligula, id mollis metus luctus sed"
            android:textAlignment="center"
            android:textColor="@color/colorMsg"
            android:textSize="12sp" />

    </ScrollView>

    <TextView
        android:id="@+id/fragment_movie_detail_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="R$321,00"
        android:textColor="@color/colorMsg"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_movie_detail_msg_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="OrÃ§amento"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/fragment_movie_detail_budget"
        app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_budget"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_budget" />

    <TextView
        android:id="@+id/fragment_movie_detail_box_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="R$2.020,00"
        android:textColor="@color/colorMsg"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_movie_detail_msg_box_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Bilheteria"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/fragment_movie_detail_box_office"
        app:layout_constraintStart_toStartOf="@+id/fragment_movie_detail_box_office"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_box_office" />

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_value"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/fragment_movie_detail_btn_invest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fragment_movie_detail_btn_invest"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button_count"
        android:text="Invest"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_movie_detail_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:text="R$2.341,00"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <TextView
        android:id="@+id/fragment_movie_detail_msg_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:text="Amount"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/shape_quant_stock"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_msg_budget" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_value_stock"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movie_detail_msg_box_office" />

    <View
        android:id="@+id/secondDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/button4"
        app:layout_constraintEnd_toEndOf="@id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@id/button4"/>

    <TextView
        android:id="@+id/fragment_movie_detail_msg_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:text="Stocks"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <View
        android:id="@+id/firstDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#05008C"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/button3"
        app:layout_constraintEnd_toEndOf="@id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@id/button3"/>

    <TextView
        android:id="@+id/fragment_movie_detail_msg_value_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:text="Value"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <TextView
        android:id="@+id/fragment_movie_detail_stock_quant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:text="1.560.290"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3" />

    <TextView
        android:id="@+id/fragment_movie_detail_stock_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:text="R$17,50"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4" />


</androidx.constraintlayout.widget.ConstraintLayout>